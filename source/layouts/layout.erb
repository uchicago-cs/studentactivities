<!DOCTYPE html>
<%
  TITLE = "Computer Science Student Activities Committee"
  PAGES = [
    { id: 'index',  href: './index.html',  name: 'Home'   },
    { id: 'donate', href: './donate.html', name: 'Donate' },
    { id: 'events', href: './events.html', name: 'Events' },
    { id: nil,      href: '#',             name: 'Jobs'   },
    { id: 'about',  href: './about.html',  name: 'About'  }
  ]
%>
<html>
  <head>
    <title><%= data.page.title.nil? ? TITLE : "#{data.page.title} | #{TITLE}" %></title>
    <meta charset="utf-8" />
    <meta content="<%= data.page.keywords || '' %>" name="keywords" />
    <meta content="<%= data.page.description || '' %>" name="description" />
    <meta content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;" name="viewport" />
    <meta content="yes" name="apple-mobile-web-app-capable" />
    <meta content="black-translucent" name="apple-mobile-web-app-status-bar-style" />
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />

    <link href="http://fonts.googleapis.com/css?family=Karla" rel="stylesheet" type="text/css">
    <%= stylesheet_link_tag "screen" %>
    <!--[if lt IE 9]>
      <script src="javascripts/ie.js" type="text/javascript"></script>
    <![endif]-->
  </head>

  <body class="container <%= page_classes %>">
    <header id="page-header" class="row">
      <%= partial 'navigation', locals: { pages: PAGES, data: data } %>
      <h1 id="page-title" class="twelvecol last">Computer Science Student Activities Committee</h1>
    </header>    

    <div id="cycler" class="row">
      <% classes = 'active' %>
      <% (0..9).each do |i| %>
        <img class="<%= classes %>" src="images/cycler/<%= '%02d' % [i] %>.jpg" alt="" />
        <% classes = '' %>
      <% end %>
    </div>

    <% if data.page.id == 'index' %>
      <div id="sponsors" class="row">
        <ul class="row">
          <li class="twocol"></li>
          <li class="twocol"><img src="images/CodeAcademy.png" alt="Code Academy" /></li>
          <li class="twocol"><img src="images/Enova.png" alt="Enova" /></li>
          <li class="twocol"><img src="images/8thLight.png" alt="8th Light" /></li>
          <li class="twocol"><img src="images/SG.png" alt="UChicago Student Government" /></li>
          <li class="twocol last"></li>
        </ul>
        <%#= link_to 'More Donors', './donate.html#donors', id: 'more-donors' %>
      </div>
    <% end %>

    <div id="main" class="row"><%= yield %></div>

    <footer id="page-footer" class="row">
      <%= partial 'navigation', locals: { pages: PAGES, data: data } %>
    </footer>

    <%= javascript_include_tag "head" %>
    <script type="text/javascript">head.js("javascripts/app.js");</script>
    <%= javascript_include_tag "mediaqueries" %>
  </body>
</html>