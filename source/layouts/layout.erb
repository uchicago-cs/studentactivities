        <ul class="row">
          <li class="twocol"></li>
          <li class="twocol"><img src="images/CodeAcademy.png" alt="Code Academy" /></li>
          <li class="twocol"><img src="images/Enova.png" alt="Enova" /></li>
          <li class="twocol"><img src="images/8thLight.png" alt="8th Light" /></li>
          <li class="twocol"><img src="images/SG.png" alt="UChicago Student Government" /></li>
          <li class="twocol last"></li>
        </ul>
        <%#= link_to 'More Donors', './donate.html#donors', id: 'more-donors' %>
      </div>
    <% end %>
-->

    <div id="main" class="row"><%= yield %></div>

    <footer id="page-footer" class="row">
      <%= partial 'navigation', locals: { pages: PAGES, data: data } %>
    </footer>

    <%= javascript_include_tag "head" %>
    <script type="text/javascript">head.js("javascripts/app.js");</script>
    <%= javascript_include_tag "mediaqueries" %>
  </body>
</html>
